# Scalixity Backend Environment Variables Template
# Copy this file to .env and fill in your production values

# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration (MySQL via Prisma)
DATABASE_URL="mysql://username:password@localhost:3306/scalixity_admin"

# JWT Authentication
JWT_SECRET=your_super_secure_jwt_secret_key_here

# Admin User Configuration (Created on first startup)
ADMIN_USERNAME=
ADMIN_PASSWORD=
ADMIN_EMAIL=
ADMIN_ROLE=

# CORS Origins (comma-separated list for production)
ALLOWED_ORIGINS=https://www.scalixity.com,https://scalixity.com,http://localhost:3000

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Frontend URL (for Next.js)
NEXT_PUBLIC_API_BASE_URL=https://api.scalixity.com

# Security (Optional - for enhanced security)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database Connection Pool (Optional - for scaling)
DB_CONNECTION_LIMIT=10
DB_ACQUIRE_TIMEOUT=60000
DB_CREATE_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000